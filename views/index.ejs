<%- include("./partials/headers") %>


<nav class="navbar navbar-dark bg-secondary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Todo App</a>
    </div>
  </nav>

<div class="container mt-5">
    
<form action="/add/todo" method="post" class="d-flex">
    <input type="text" name="todo" class="form-control" placeholder="Enter-your-Todo">
    <input type="submit" value="Add Todo" class="btn btn-md btn-success mx-1">
</form>
<div class="container my-3">
    <h3>Todo List</h3>
</div>

<ul class="list-group my-4">
    <% todo.forEach(todos => { %>
        <li class="list-group-item mx-2"><%= todos.todo %> <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm mx-2">Delete</a></li>

        <% }) %>
   
   
  </ul>
</div>

<%- include("./partials/footer") %>